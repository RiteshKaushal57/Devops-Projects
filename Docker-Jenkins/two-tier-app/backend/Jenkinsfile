pipeline {
    agent {
        docker {
            image 'node:18'   // Node.js 18 image (includes npm)
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Allow docker commands
        }
    }

    environment {
        IMAGE_NAME = "two-tier-backend"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¥ Pulling latest code from GitHub...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'npm test || echo "âš ï¸ No tests found, skipping..."'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                sh 'docker build -t ${IMAGE_NAME} .'
            }
        }

        stage('Run Container') {
            steps {
                echo 'ğŸš€ Running container...'
                sh '''
                docker rm -f ${IMAGE_NAME} || true
                docker run -d -p 3000:3000 --name ${IMAGE_NAME} ${IMAGE_NAME}
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and deployment successful!'
        }
        failure {
            echo 'âŒ Build failed. Check logs for details.'
        }
    }
}
