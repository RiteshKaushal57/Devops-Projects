pipeline {
    agent any

    environment {
        FRONTEND_DIR   = 'Docker-Jenkins/two-tier-app/frontend'
        BACKEND_DIR    = 'Docker-Jenkins/two-tier-app/backend'
        FRONTEND_IMAGE = 'two-tier-frontend:latest'
        BACKEND_IMAGE  = 'two-tier-backend:latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'üì• Pulling latest code from GitHub...'
                checkout scm
            }
        }

        stage('Frontend') {
            steps {
                echo 'üíª Building frontend...'
                dir("${FRONTEND_DIR}") {
                    sh """
                    docker build -t ${FRONTEND_IMAGE} . || true
                    if [ \$(docker images -q ${FRONTEND_IMAGE}) ]; then
                        echo 'üöÄ Starting frontend container...'
                        
                        docker ps -q --filter name=frontend | grep -q . && docker stop frontend && docker rm frontend || true
                        docker run -d -p 8081:80 --name frontend two-tier-frontend:latest

                    else
                        echo '‚ö†Ô∏è No changes in frontend image, skipping container restart.'
                    fi
                    """
                }
            }
        }

        stage('Backend') {
            steps {
                echo 'üì¶ Building backend...'
                dir("${BACKEND_DIR}") {
                    sh """
                    docker build -t ${BACKEND_IMAGE} . || true
                    if [ \$(docker images -q ${BACKEND_IMAGE}) ]; then
                        echo 'üöÄ Starting backend container...'
                        docker ps -q --filter name=backend | grep -q . && docker stop backend && docker rm backend || true
                        docker run -d -p 3000:3000 --name backend ${BACKEND_IMAGE}
                    else
                        echo '‚ö†Ô∏è No changes in backend image, skipping container restart.'
                    fi
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'üßπ Cleanup temporary containers/images if needed...'
            sh """
            docker ps -aq --filter name=frontend | xargs -r docker rm -f || true
            docker ps -aq --filter name=backend  | xargs -r docker rm -f || true
            """
        }
    }
}
