pipeline {
    agent any

    environment {
        FRONTEND_DIR = 'Docker + Jenkins/two-tier-app/frontend'
        BACKEND_DIR = 'Docker + Jenkins/two-tier-app/backend'
        FRONTEND_IMAGE = 'two-tier-frontend:latest'
        BACKEND_IMAGE = 'two-tier-backend:latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'üì• Pulling latest code from GitHub...'
                checkout scm
            }
        }

        stage('Install Backend Dependencies') {
            steps {
                echo 'üì¶ Installing backend dependencies...'
                dir("${BACKEND_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                echo 'üì¶ Installing frontend dependencies...'
                dir("${FRONTEND_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'üèóÔ∏è Building frontend...'
                dir("${FRONTEND_DIR}") {
                    sh 'npm run build'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'üê≥ Building Docker images...'
                dir("${BACKEND_DIR}") {
                    sh 'docker build -t ${BACKEND_IMAGE} .'
                }
                dir("${FRONTEND_DIR}") {
                    sh 'docker build -t ${FRONTEND_IMAGE} .'
                }
            }
        }

        stage('Run Containers') {
            steps {
                echo 'üöÄ Running containers...'
                sh 'docker ps -aq --filter "name=backend" | xargs -r docker rm -f || true'
                sh 'docker ps -aq --filter "name=frontend" | xargs -r docker rm -f || true'

                sh 'docker run -d -p 3000:3000 --name backend ${BACKEND_IMAGE}'
                sh 'docker run -d -p 8080:80 --name frontend ${FRONTEND_IMAGE}'
            }
        }
    }

    post {
        always {
            echo 'üßπ Cleaning up old containers...'
            sh 'docker ps -aq --filter "name=backend" | xargs -r docker rm -f || true'
            sh 'docker ps -aq --filter "name=frontend" | xargs -r docker rm -f || true'
        }
    }
}
