pipeline {
    agent any

    environment {
        BACKEND_DIR = 'Docker + Jenkins/two-tier-app/backend'
        DOCKER_IMAGE = 'two-tier-backend:latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¥ Pulling latest code from GitHub...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing backend dependencies...'
                dir("${BACKEND_DIR}") {
                    // Fix npm cache permissions
                    sh 'npm config set cache $WORKSPACE/.npm --global'
                    sh 'npm install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image for backend...'
                dir("${BACKEND_DIR}") {
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                }
            }
        }

        stage('Run Container') {
            steps {
                echo 'ğŸš€ Running backend container...'
                sh '''
                    if [ "$(docker ps -q -f name=backend)" ]; then
                        echo "Container already running. Restarting..."
                        docker rm -f backend
                    fi
                    docker run -d -p 3000:3000 --name backend ${DOCKER_IMAGE}
                '''
            }
        }
    }

    post {
        always {
            echo 'ğŸ§¹ Cleaning up old containers...'
            sh 'docker ps -aq --filter "name=backend" | xargs -r docker rm -f || true'
        }
    }
}
